<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blogappdjangorest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.Welcome_screen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.FirstTimeDetails"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.ChangePassword"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.FollowersNFollowing"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.Blog_view"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.ProfileView"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.EditProfile"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.HomeScreen"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activities.ForgotPasswordRequest"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.SignUpScreen"
            android:screenOrientation="portrait">

        </activity>
        <activity android:name=".activities.LoginScreen"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>